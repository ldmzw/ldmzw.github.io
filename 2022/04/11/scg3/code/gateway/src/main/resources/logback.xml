<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="true">

    <property name="log.path" value="logs"/>
    <property name="app.name" value="ldmzw-demo-scg"/>

    <property name="LOG_PATTERN" value="%-4relative [%thread] %-5level %logger{35} - %msg%n"/>

    <!--输出到控制台 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <Pattern>${LOG_PATTERN}</Pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!--输出到文件 -->
    <appender name="DEBUG_FILE" class="ch.qos.logback.core.FileAppender">
        <!-- 正在记录的日志文件的路径及文件名 -->
        <file>${log.path}/${app.name}_debug.log</file>
        <append>false</append>
        <!--日志文件输出格式 -->
        <encoder>
            <pattern>%date{yyyy-MM-dd HH:mm:ss.SSS} [%t] [%-5level] %logger{36}.%M-%line - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <logger name="root" level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="DEBUG_FILE"/>
    </logger>
    <logger name="com.ldmzw.demo.scg" level="DEBUG"/>

</configuration>